<div class="row">
  <aside class="span4">
    <section>
      <h1>Users</h1>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Occupation</th>
            <th>Live in</th>
            <th>Avator URL</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.occupation %></td>
              <td><%= user.live %></td>
              <td><%= user.avator_url %></td>
              <td><%= link_to 'Delete', admin_user_path(user), method: 'delete', class: 'btn btn-info' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @current_user.admin? %>
        <%= link_to 'New User', new_admin_user_path, class: 'btn btn-info' %>
      <% end %>
    </section>
  </aside>
</div>
